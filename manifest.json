{
    "manifest_version": 2,
  
    "name": "Stahpp Chrome Extension",
    "description": "This extension will let users set warnings for websites that they find distracting",
    "version": "1.0",
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html",
     "default_title": "Stahpp!"
    },
    "permissions": [
      "tabs",
      "activeTab",
      "storage", 
      "<all_urls>"
    ], 
    "background": {
      "scripts": [
      "background.js"
      ]
    }
}
